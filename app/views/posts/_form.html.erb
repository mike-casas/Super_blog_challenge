<%= form_for @post do |f| %>
  <%= render 'layouts/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title , class:"form-control", required: true, minlength:"4"%>
  </div>
  <div class="form-group">
    <%= f.label :description, "Description" %>
    <%= f.text_area :description , class:"tinymce form-control",  :rows => 10, required: true, minlength:"10"%>
  </div>
  <%= f.submit class:"btn btn-default btn-block"%>
<% end %>
